<Application x:Class="Ergasia_Final.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ergasia_Final">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Include Caliburn.Micro Bootstrapper-->
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="bootstrapper"/>
                </ResourceDictionary>
                
                <!--Color & Themes-->
                <ResourceDictionary Source="Resources/GlobalStyles.xaml"/>
                <ResourceDictionary Source="Resources/DarkColors.xaml"/>
                <ResourceDictionary Source="Resources/LightColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
    </Application.Resources>
</Application>
